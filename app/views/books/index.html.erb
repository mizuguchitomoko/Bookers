<header><h1>Books</h1></header>
<body>
<table style="border:none;">
  <tbody style="border:none;">
    <tr style="border:none;">
      <td style="border:none;">Title</td>
      <td style="border:none;">Body</td>
      <% @books.each do |book| %>
    </tr>
  </tbody>
</table>
<% end %>
<!-- 入力フォーム -->
<h3>New Book</h3>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</body>
<!-- form_with部分 -->
 
<%= form_with model:@book, local:true do |f| %>
<%= render 'layouts/error.message' ,book: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</body>
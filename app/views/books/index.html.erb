<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<header><h1>Books</h1></header>
<body>


  <table style="border:none;">
  <tbody style="border:none;">
    <tr style="border:none;">
      <td style="border:none;">Title</td>
      <td style="border:none;">Body</td></td>
    </tr>
     <% @books.each do |book| %>
    <tr style="border:none;">
      <td style="border:none;"><%= book.title %></td>
      <td style="border:none;"><%= book.body %></td>
      <td style="border:nine"><%= link_to "Show", book_path(book) %></td>
      <td style="border:nine"><%= link_to "Edit", edit_book_path(book) %></td>
      <td style="border:nine"><%= link_to "Destroy", book_path(book), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<!-- 入力フォーム -->
<h3>New Book</h3>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
<!-- ここから　-->

<!-- 10/9 -->


  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</body>